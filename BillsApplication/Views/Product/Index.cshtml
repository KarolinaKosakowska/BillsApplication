@model IEnumerable<BillsData.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Unit</th>
            <th>

            </th>
            <th><a asp-action="Create" class="btn btn-success btn-lg"><i style="color: white;" class="glyphicon glyphicon-plus"></i></a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i style="color: black;margin-right:10px" class="glyphicon glyphicon-pencil"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><i style="color:orange;margin-right:10px" class="glyphicon glyphicon-menu-hamburger"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i style="color:black;margin-right:10px" class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
